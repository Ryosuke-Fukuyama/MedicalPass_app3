<h2><%= t('.sign_in') %></h2>

<%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), local: true) do |f| %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, placeholder: t('view.placeholder.name_or_email'), autofocus: true, autocomplete: "login", size: 24 %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: t('view.placeholder.password'), autocomplete: "current-password", size: 24 %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit t('.sign_in'), { id: "submit" } %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>


<%= render "patients/shared/links" %>
