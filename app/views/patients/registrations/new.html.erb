<h3><%= t('.sign_up') %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <% if flash[:recaptcha_error].present? %>
    <p><li class="left-margin"><%= flash[:recaptcha_error] %></li></p>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: t('view.placeholder.patient_name'),autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: t('view.placeholder.email'),autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, placeholder: t('view.placeholder.password'), autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder: t('view.placeholder.password_confirmation'), autocomplete: "new-password" %>
  </div>

  <%= recaptcha_tags %>

  <div class="actions">
    <%= f.submit t('.sign_up'), { id: "submit" } %>
  </div>
<% end %>


<%= render "patients/shared/links" %>
