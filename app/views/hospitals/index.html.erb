<h3><%= t('view.hospital') + t('view.index') %></h3>

<%= search_form_for @q, url: search_hospitals_path do |f| %>
  <%= f.label :name_cont, t('view.hospital') + t('view.name') %>
  <%= f.search_field :name_cont %>
  <br>
  <%= f.submit 'search' %>
<% end %>
<%= search_form_for @q, url: search_hospital_path do |f| %>
  <%= f.label :name_cont, t('view.hospital_label') %>
  <%= f.select :hospital_label_id, @hospital_labels.map{ |label| [label.name, label.id] }, include_blank: t('view.select') %>
  <%= f.submit 'search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t('view.hospitals') + t('view.name') %></th>
      <th><%= t('view.access') %></th>
      <th><%= t('view.hospital_label') %></th>
      <th colspan="3"></th>
    <tr/>
  </thead>
  <tbody>
    <% if @results? %>
      <% @results.each do |hospital| %>
    <% else %>
      <% @hospitals.each do |hospital| %>
    <% end %>
        <tr>
          <td id=<%= "hospital-index_item-name-#{hospital.id}" %>><%= hospital.name %></td>
          <td id=<%= "hospital-index_item-access-#{hospital.id}" %>><%= hospital.access %></td>
          <td>
            <% hospital.hospital_labels.each do |label| %>
              <div id=<%= "hospital-index_item-#{hospital.id}-label-#{label.id}" %>>
                <%= label.name %>
              </div>
            <% end %>
          </td>
          <td><%= link_to t('view.show'), task_path(task.id) %>/</td>
        </tr>
      <% end %>
  </thead>
</table>

<%= paginate @hospitals %>

<%= link_to t('view.new'), new_hospital_path %>
