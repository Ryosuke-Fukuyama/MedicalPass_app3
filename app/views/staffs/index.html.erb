<h3><%= t('view.staff') + t('view.index') %></h3>

<%= link_to t('view.new') + t('view.staff'), new_staff_path %>

<div class="d-flex flex-column justify-content-center patient_table_wrapper container">
  <div class="row mt-1">
    <div class="col-4 patient_col col_top"><%= t('view.name') %></div>
    <div class="col-4 patient_col col_top"><%= t('view.admin') %></div>
    <div class="col-4 patient_col col_top"><%= 'ボタン' %></div>
  </div>
  <% @staffs.each do |staff| %>
      <div class="row mt-1">
        <div class="col-4 patient_col"><%= staff.name %></div>
        <div class="adminmark col-4 patient_col"><%= staff.admin == true ? "○" : "" %></div>
        <div class="col-4 patient_col d-flex flex-row justify-content-center">
          <button type="button" class="btn btn-outline-info mx-1"><%= link_to t('view.edit'), edit_staff_path(staff) %></button>
          <button type="button" class="btn btn-danger mx-1">
          <%= link_to t('view.destroy'), staff, method: :delete,
                data: { confirm: t('confirm.delete') } %></button>
        </div>
      </div>
    <% end %>
</div>