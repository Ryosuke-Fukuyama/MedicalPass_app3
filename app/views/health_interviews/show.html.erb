<div class="d-flex flex-column justify-content-center align-items-center">
  <h3><%= @health_interview.patient.name + t('view.history') %></h3>

  <div class="outpatient_history">
    <ul>
      <% @first_interview = @patient.health_interviews.first %>
      <h4><%= t('view.condition') %></h4>
      <li><%= @first_interview.condition %></li>

      <h4><%= t('view.symptomatology') %></h4>
      <li><%= @first_interview.created_at.strftime('%Y/%m/%d') %></li>
      <li><%= @first_interview.symptomatology %></li>
      <% if @first_interview.guide_label.done? %>
        <tr>
          <td><%= t('view.price') %></td>
          <td>¥<%= @first_interview.price %></td>
          <td><%= link_to :edit, edit_hospital_health_interview_path(@first_interview.id) %></td>
        </tr>
      <% end %>

      <h4><%= t('view.comment') %></h4>
      <% @patient.health_interviews.each do |hi| %>
        <li><%= hi.created_at.strftime('%Y/%m/%d') %></li>
        <% if hi.comment.present? %>
          <li><%= hi.comment  %></li>
        <% end %>
        <% if hi.guide_label.done? %>
          <tr>
            <td><%= t('view.price') %></td>
            <td>¥<%= hi.price %></td>
            <td><%= link_to :edit, edit_hospital_health_interview_path(hi.id) %></td>
          </tr>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to t('view.back'), :back %>